@model CategoryListViewModel

@{
    var allCategories = Model.CurrentCategory == 0 ? "list-group-item active" : "list-group-item";
}

<section class="list-group">
        <a href="/product/index?category=0" style="cursor:pointer" class="@allCategories">All Categories</a>
    @foreach(var item in Model.Categories)
    {
        var css = "list-group-item";
        @if (item.CategoryId == Model.CurrentCategory)
        {
            css += " active";
        }
        <a href="/product/index?category=@item.CategoryId" style="cursor:pointer" class="@css">@item.CategoryName</a>
    }


</section>
